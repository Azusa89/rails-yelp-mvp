<h1>Show</h1>

<p><%=@restaurant.name%></p>
<p><%=@restaurant.address%></p>
<p><%=@restaurant.phone_number%></p>

<%= link_to "back", restaurants_path %>

<% if @restaurant.reviews.any? %>
  <% @restaurant.reviews.each do |i|%>
  <p><%= i.content %></p>
  <p><%= i.rating %></p>
  <% end %>
<% else %>
  <p><%= 'No reviews yet!' %></p>
<% end %>


<p><%= link_to "Add review", new_restaurant_review_path(@restaurant) %></p>
